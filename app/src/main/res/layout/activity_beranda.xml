<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Beranda"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imghari"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_marginTop="100dp"
            android:textSize="12dp"
            fontPath="fonts/Poppins-SemiBold.otf"
            tools:ignore="MissingPrefix"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:id="@+id/ucap"
            android:text="Selamat Datang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/ucap"
            android:textSize="17dp"
            fontPath="fonts/Poppins-Black.otf"
            tools:ignore="MissingPrefix"
            android:gravity="center"
            android:id="@+id/kamu"
            android:textColor="@android:color/black"
            android:text="Kamu mau ngapain hari ini?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txte"
            fontPath="fonts/Poppins-Bold.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:text="Siap melayani anda setulus hati"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="MissingPrefix" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:id="@+id/cekresiko"
            android:layout_width="0dp"
            app:cardElevation="50dp"
            android:layout_height="100dp"
            android:layout_weight="0.33"
            android:clickable="true">

            <RelativeLayout
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/cekresiko"
                    android:layout_above="@+id/textviewCR"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    fontPath="fonts/Poppins-SemiBold.otf"
                    tools:ignore="MissingPrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Cek Resiko Covid19"
                    android:textColor="@android:color/black"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:id="@+id/textviewCR"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:id="@+id/GejalaCovid"
            android:layout_width="0dp"
            app:cardElevation="5dp"
            android:layout_height="100dp"
            android:layout_weight="0.33"
            android:clickable="true">

            <RelativeLayout
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textviewGC"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:scaleType="center"
                    android:src="@drawable/gejalacorona" />

                <TextView

                    fontPath="fonts/Poppins-SemiBold.otf"
                    tools:ignore="MissingPrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Gejala Covid19"
                    android:textColor="@android:color/black"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:id="@+id/textviewGC"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:id="@+id/ZonaMerah"
            android:layout_width="0dp"
            app:cardElevation="5dp"
            android:layout_height="100dp"
            android:layout_weight="0.33"
            android:clickable="true">

            <RelativeLayout
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textviewZM"
                    android:layout_centerHorizontal="true"
                    android:scaleType="center"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/zonamerah" />

                <TextView
                    fontPath="fonts/Poppins-SemiBold.otf"
                    tools:ignore="MissingPrefix"
                    android:id="@+id/textviewZM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:maxLines="1"
                    android:text="Pendeteksi Zona Merah"
                    android:textColor="@android:color/black"
                    android:textSize="8dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:id="@+id/Informasi"
            android:layout_width="0dp"
            app:cardElevation="50dp"
            android:layout_height="100dp"
            android:layout_weight="0.33"
            android:clickable="true">

            <RelativeLayout
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/informasi"
                    android:layout_above="@+id/textviewInfo"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/textviewInfo"
                    fontPath="fonts/Poppins-SemiBold.otf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="11dp"
                    android:layout_marginBottom="5dp"
                    android:textAlignment="center"
                    android:maxLines="2"
                    android:text="Informasi Seputar Covid19"
                    android:textColor="@android:color/black"
                    android:textSize="8dp"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:id="@+id/TipsPencegahan"
            android:layout_width="0dp"
            app:cardElevation="5dp"
            android:layout_height="100dp"
            android:layout_weight="0.33"
            android:clickable="true">

            <RelativeLayout
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textviewTP"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:scaleType="center"
                    android:src="@drawable/tips" />

                <TextView

                    fontPath="fonts/Poppins-SemiBold.otf"
                    tools:ignore="MissingPrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Tips Pencegahan Covid19"
                    android:textColor="@android:color/black"
                    android:textSize="8dp"
                    android:textStyle="bold"
                    android:id="@+id/textviewTP"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:id="@+id/Statistik"
            android:layout_width="0dp"
            app:cardElevation="5dp"
            android:layout_height="100dp"
            android:layout_weight="0.33"
            android:clickable="true">

            <RelativeLayout
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textviewStat"
                    android:layout_centerHorizontal="true"
                    android:scaleType="center"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/statistik" />

                <TextView
                    fontPath="fonts/Poppins-SemiBold.otf"
                    tools:ignore="MissingPrefix"
                    android:id="@+id/textviewStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:maxLines="1"
                    android:text="Statistik Covid19"
                    android:textColor="@android:color/black"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:id="@+id/Berita"
            android:layout_width="0dp"
            app:cardElevation="50dp"
            android:layout_height="100dp"
            android:layout_weight="0.33"
            android:clickable="true">

            <RelativeLayout
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/beritacovid"
                    android:layout_above="@+id/textviewBe"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    fontPath="fonts/Poppins-SemiBold.otf"
                    tools:ignore="MissingPrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Berita Update Covid19"
                    android:textColor="@android:color/black"
                    android:textSize="8dp"
                    android:textStyle="bold"
                    android:id="@+id/textviewBe"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:id="@+id/Chatbox"
            android:layout_width="0dp"
            app:cardElevation="5dp"
            android:layout_height="100dp"
            android:layout_weight="0.33"
            android:clickable="true">

            <RelativeLayout
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textviewCB"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:scaleType="center"
                    android:src="@drawable/chatboxcorona" />

                <TextView

                    fontPath="fonts/Poppins-SemiBold.otf"
                    tools:ignore="MissingPrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Chatbox"
                    android:textColor="@android:color/black"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:id="@+id/textviewCB"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:id="@+id/DonasiPeduli"
            android:layout_width="0dp"
            app:cardElevation="5dp"
            android:layout_height="100dp"
            android:layout_weight="0.33"
            android:clickable="true">

            <RelativeLayout
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textviewDP"
                    android:layout_centerHorizontal="true"
                    android:scaleType="center"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/donasipeduli" />

                <TextView
                    fontPath="fonts/Poppins-SemiBold.otf"
                    tools:ignore="MissingPrefix"
                    android:id="@+id/textviewDP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:maxLines="1"
                    android:text="Donasi Peduli"
                    android:textColor="@android:color/black"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>